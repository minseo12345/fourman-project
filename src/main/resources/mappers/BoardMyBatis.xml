<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="fourman.project1.repository.board.BoardMyBatisMapper">

    <!-- 전체 목록 조회 -->
    <select id="findBoards" resultType="fourman.project1.domain.board.Board">
        SELECT * FROM boards
    </select>

    <!-- 1건 조회 -->
    <select id="findBoardById" parameterType="Long" resultType="fourman.project1.domain.board.Board">
        SELECT * FROM boards WHERE board_id = #{boardId}
    </select>

    <!-- 저장 -->
    <insert id="createBoard" parameterType="fourman.project1.domain.board.Board" useGeneratedKeys="true" keyProperty="boardId">
        INSERT INTO boards (boardname)
        VALUES (#{boardname})
    </insert>

    <!-- 수정 -->
    <update id="updateBoard" parameterType="fourman.project1.domain.board.Board">
        UPDATE boards
        SET boardname = #{boardname}
        WHERE board_id = #{boardId}
    </update>

    <!-- 1건 삭제 -->
    <delete id="deleteBoard" parameterType="fourman.project1.domain.board.Board">
        DELETE FROM boards WHERE board_id = #{boardId}
    </delete>

</mapper>